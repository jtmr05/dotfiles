# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# Set the defaul terminal to be used
set $terminal gnome-terminal

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 3
default_floating_border pixel 3

# Hide borders
hide_edge_borders none

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 3
bindsym $mod+n border normal

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:Noto Sans UI Medium 11

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal --role=FLOAT
bindsym $mod+Shift+Return exec $terminal --role=TILE

# kill focused window
bindsym $mod+Shift+q kill
# bindsym $mod+Shift+x kill

# start program launcher
bindsym $mod+d exec rofi -show drun

# start emoji picker
bindsym $mod+Shift+d exec emoji-picker

# toggle touchpad
# TODO needs somes fixing
bindsym $mod+F3 exec --no-startup-id my_toggle_touchpad


################################################################################################
