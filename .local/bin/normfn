use v5.36;

sub read_yes(){
    while(1){
        my $input = <STDIN>;

        if($input =~ m/^(y(es)?)?$/i){
            @files = split "\n", `ls -1 -A`;
            last;
        }
        elsif($input =~ m/^no?$/i){
            return 1;
        }
        else {
            print 'Please enter yes or no. [Y/n] ';
        }
    }
}

sub main(){

    my @files = @ARGV;

    unless(scalar @files > 0){
        print STDERR 'Performing name normalization for all files in this directory. '
            . 'Continue? [Y/n] ';

        read_yes();
    }

    foreach(@files){

        my $old_name = $_;

        s|[-_/<>\|:&();,"']| |g;
        s/^\s+|\s+$//g;
        s/\s+/_/g;

        if($old_name ne $_){
            system "mv '$old_name' $_";
        }
    }

    return 0;
}

exit main() unless(caller);
